---
import GitHub from "./icons/GitHub.astro";
import JavaScript from "./icons/JavaScript.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Netlify from "./icons/Netlify.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";
import SpringBoot from "./icons/SpringBoot.astro";
const TAGS = {
  JavaScript: {
    name: "JavaScript",
    class: "bg-black text-white",
    icon: JavaScript,
  },

  Bootstrap: {
    name: "Bootstrap",
    class: "bg-black text-white",
    icon: Bootstrap,
  },

  Netlify: {
    name: "Netlify",
    class: "bg-black text-white",
    icon: Netlify,
  },
  SpringBoot: {
    name: "SpringBoot",
    class: "bg-black text-white",
    icon: SpringBoot,
  },
}

const PROJECTS = [
  {
    title: "FilmoWeb",
    description: "Aplicación web interactiva para explorar trailers de películas y series. Desarrollada con Bootstrap, funciones serverless de Netlify e integracion de la Api The Movie db, permite a los usuarios ver detalle, fecha de estreno y calificación de la película o seríe.",
    link: "https://filmoweb.netlify.app/",
    github: "https://github.com/JordanRheza/movies_web",
    image: "/project/project1.webp",
    tags: [TAGS.JavaScript, TAGS.Bootstrap, TAGS.Netlify],
  },
  {
    title: "Sistema de alquiler de vehículos",
    description: "Sistema Backend de alquiler de vehículos. Desarrollado con Spring Boot, permite gestionar usuarios, vehículos y reservas.",
    github: "https://github.com/JordanRheza/alquilerVehiculos",
    image: "./project/project2.webp",
    tags: [TAGS.SpringBoot],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Captura del proyecto"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-wrap mb-2 gap-x-2">
              {tags.map((tag) => (
                <li class="md:mt-1">
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Repositorio
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Visitar Web
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
